{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.rulers": [90], // Prettier: printWidth

  "files.associations": {
    ".eslintrc.json": "jsonc"
  },

  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  // Prevent ESLint extension getting confused in monorepo
  // https://github.com/microsoft/vscode-eslint/issues/696#issuecomment-553697002
  "eslint.workingDirectories": ["./"],

  "[markdown]": {
    "editor.rulers": [120] // Prettier: *.md printWidth
  }
}
